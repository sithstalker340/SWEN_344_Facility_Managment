<div class="top-50">
	<form method="post" class="col-xs-6 col-sm-5 col-xs-offset-2 col-sm-offset-3">
		<h3>Get Available Times</h3>
		<% if (locals.error) { %>
		<div style="color: red;"><%= error %></div>
		<% } %>
        <div class="form-group">
            <label for="day">Day</label>
            <select class="form-control" name="day">
				<option>Monday</option>
				<option>Tuesday</option>
				<option>Wednesday</option>
				<option>Thursday</option>
				<option>Friday</option>
			</select>
        </div>
        <div class="form-group">
            <label for="section">Section</label>
            <input class="form-control" type="text" name="section">
        </div>
        <div class="form-group">
            <label for="length">Duration (hours)</label>
            <input class="form-control" type="number" name="length">
        </div>
		<button type="submit" class="btn btn-primary pull-right">Get Times</button>
	</form>
</div>
