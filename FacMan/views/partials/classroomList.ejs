<div>
	<div class="text-capitalize">
		<div class="row">
			<h3 class="col-xs-3 pull-left" style="white-space: nowrap;">classroom list</h3>
			<% if (user.ROLE == "Admin") { %>
				<button class="btn btn-default pull-right new-device" onclick="document.location.href += '/newClassroom'"><span class="glyphicon glyphicon-plus"></span>Add Classroom</button>
			<% } %>
		</div>
		<table class="classroom-list table table-striped">
		    <thead>
	      		<tr>
			        <th>building</th>
			        <th>room number</th>
	      		</tr>
		    </thead>
		    <tbody>
				<% for (var i = 0; i < classrooms.length; i++) { %>
					<tr class="classroomListing" onclick="document.location.href += '/<%= classrooms[i]["ID"] %>';" >
						<td><%= classrooms[i]["BUILDING_ID"] %></td>
						<td><%= classrooms[i]["ROOM_NUM"] %></td>
					</tr>
				<% } %>
		    </tbody>
	  	</table>
	</div>
</div>