<html lang="en">
  <% include ../views/partials/head %>
  <body>
    <header>
        <% include ../views/partials/header %>
    </header>

    <div class="row content">

        <div class="col-xs-4 col-sm-3 col-md-3 col-lg-2">
            <% include ../views/partials/sidebar %>
        </div>

        <div class="col-xs-8 col-sm-9 col-md-9 col-lg-10">
            <div class="row">
                <h2>Classroom <%=classroom["classroom"]["ID"] %></h2>
                <button  class="btn" onclick="document.location.href += '/newReservation'">Make Reservations</button>
                <button class="btn" onclick="document.location.href += '/delete'">Delete Classroom</button>
            </div>
            <dl>
                <dt ><strong>Building ID:</strong></dt> <dd><%= classroom["classroom"]["BUILDING_ID"] %></dd>
                <dt><strong>Room Number:</strong></dt> <dd><%= classroom["classroom"]["ROOM_NUM"] %></dd>
                <dt><strong>Capacity:</strong></dt> <dd><%= classroom["classroom"]["CAPACITY"] %></dd>
            </dl>
            <%if(Object.keys(classroom["reserve"]).length > 0){%> 
                <p><strong>Reservations for this Classroom:</strong></p><ul>
                <%for(i in classroom["reserve"]) { %>
                    <li><%= i + ": " + classroom["reserve"][i] %></li>
                <% } }%>
            </ul>
            <% include ../views/partials/reservationList %>
        </div>
    </div>

    <% include ../views/partials/analytic %>
    <% include ../views/partials/footer %>
  </body>
</html>
